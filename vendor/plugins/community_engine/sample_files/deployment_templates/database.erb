# Deployment database.yml
login: &login
  adapter: <%= "#{database}\n" %>
  username: <%= "#{database_username}\n" %>
  password: <%= "#{database_password}\n" %>

development:
  database: <%= "#{application}_development\n" %>
  <<: *login

test:
  database: <%= "#{application}" %>_test
  <<: *login

production:
  database: <%= "#{application}" %>_production
  <<: *login
