.col_full.sitemap
  -rounded do 
    %h2= "#{AppConfig.community_name} Sitemap"
    
    .yui-g
      .yui-g.first
        %h3 Categories
        %ul
          - @categories.each do |c|
            %li= link_to c.name, category_path(c)      
      .yui-g
        %h3= :pages.l
        %ul
          %li=link_to :home.l, '/'
          %li= link_to :users.l, users_path
          %li= link_to :about.l, about_path
          %li= link_to :faq.l, faq_path
          %li=link_to :log_in.l, '/login'
          

