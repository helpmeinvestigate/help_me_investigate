- @section = "challenges"
- @subsection = "all"
- content_for :sub_nav do
  =render :partial => "subnav"
  
.box
  %h3#edit_challenge= :edit_challenge.l

    
  = error_messages_for :challenge
  - form_for(:challenge, :url => investigation_challenge_path(@challenge.investigation, @challenge), :html => { :method => :put, :class =>'MainForm' }) do |f|
  
    = render :partial => "form", :object => f
    %p= submit_tag :save_challenge.l, :or => link_to(:cancel.l, investigation_path(@challenge.investigation))