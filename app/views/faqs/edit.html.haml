- @section = "faqs"

.box
  %h3#edit_faq= "Edit this FAQ"

    
  = error_messages_for :faq
  - form_for(:faq, :url => faq_path(@faq), :html => { :method => :put, :class =>'MainForm' }) do |f|
  
    = render :partial => "form", :object => f
    %p
      = submit_tag :save_faq.l, :or => link_to(:cancel.l, faq_path(@faq)) 
      = link_to :delete.l, faq_path(@faq), {:method => :delete, :confirm => :permanently_delete_this_faq.l}
- content_for :scripts do    
  = javascript_tag "$('faq_question').focus();"
