.yui-b
  /= render :partial => 'posts/author_profile', :locals => {:user => @user} if @user

#yui-main
  - if @comments.empty?
    #emptycomments= :no_comments_yet.l_with_args(:type => @commentable.class.to_s.underscore)
  .yui-b#comments.box.hfeed.comments
    %h3
      = :comments.l + " -"
      = link_to @title, @back_url

    %a#newest_comment
    = render :partial => 'comments/comment', :collection => @comments

    .pagination=paginating_links @comments if @comments.page_count > 1

    - unless @commentable.class.to_s == "User"
      %h3="Add Your Comment!".l
      %p= render :partial => 'comments/comment_form', :locals => {:commentable => @commentable}  
      
